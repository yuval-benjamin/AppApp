    <div class="container">
        <h1 class="my-4">Add New Customer</h1>
        <form id="registerForm" action="/register" method="post">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input name="username" type="text" placeholder="Username" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">First Name</label>
                <input name="firstName" type="text" placeholder="First Name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Last Name</label>
                <input name="lastName" type="text" placeholder="Last Name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Email Address</label>
                <input name="email" type="text" placeholder="Email Address" class="form-control" required>
            </div>
            <span class="error-message" id="emailError"></span>

            <div class="mb-3">
                <label class="form-label">Gender</label>
                <select name="gender" id="gender" class="form-control" required>
                    <option value="" disabled selected>Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label" for="birthday">Date of Birth</label>
                <input name="birthDate" type="date" id="birthday" class="form-control" required>
                <span class="error-message" id="birthDateError"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Passowrd</label>
                <input name="password" type="password" placeholder="Password" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">is Admin?</label>
                <select name="isAdmin" id="isAdmin" class="form-control" required>
                    <option value="false">false</option>
                    <option value="true">true</option>
                </select>
            </div>

            <!-- Add error here -->

            <button type="submit" class="btn btn-primary custom-btn">Submit</button>
        </form>
    </div>
