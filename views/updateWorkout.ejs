    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/home.css">
    <link rel="stylesheet" href="/styles/header-footer.css">
    <link rel="stylesheet" href="/styles/admin-page.css">
    <link rel="stylesheet" href="/styles/adminWorkouts.css">
</head>
<body>

<!-- Navbar -->
<header class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
    <nav class="container-fluid">
        <!-- Left elements -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- Logo -->
            <a class="navbar-brand mt-2 mt-lg-0" href="#">
                <img src="/images/logo.png" height="50" alt="MDB Logo" />
            </a>
            <!-- Left links -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/nearme">Near Me</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminPage">Admin Page</a>
                </li>
            </ul>
        </div>
        <!-- Right elements -->
        <div class="d-flex align-items-center position-relative">
            <!-- Cart -->
            <a class="link-secondary me-3" href="#">
                <i class="fas fa-shopping-cart fa-2x"></i>
            </a>
            <!-- Avatar -->
            <div class="dropdown">
                <a class="dropdown-toggle d-flex align-items-center hidden-arrow link-secondary"
                   href="#" id="navbarDropdownMenuAvatar" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle fa-2x"></i>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuAvatar" style="position: absolute; top: 100%; left: 0;">
                    <li><a class="dropdown-item" href="#">My profile</a></li>
                    <li><a class="dropdown-item" href="#">My orders</a></li>
                    <li><a class="dropdown-item" href="#">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Main content -->
<div class="container-flex">
    <!-- Sidebar -->
    <aside class="sidebar">
        <ul>
            <li><a href="/adminPage/adminWorkouts"><i class="fas fa-dumbbell"></i> Workouts</a></li>
            <li><a href="#"><i class="fas fa-running"></i> Users</a></li>
            <li><a href="#"><i class="fas fa-truck"></i> Orders</a></li>
            <li><a href="/adminPage/charts"><i class="fas fa-chart-bar"></i> Statistics</a></li>
            <li><a href="/adminPage/facebook"><i class="fab fa-facebook fa-2x iconColor"></i> Facebook</a></li>
        </ul>
    </aside>

    <div class="container">
        <h1 class="my-4">Edit Workout</h1>
        <form id="update-workout-form">
            <input type="hidden" id="workout-id" value="<%= workout._id %>">
            <div class="row">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="name" class="form-label">Workout Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= workout.name %>" required pattern="[A-Za-z\s]+" title="Workout name must contain only letters and spaces">
                    </div>
                    <div class="mb-3">
                        <label for="time" class="form-label">Time</label>
                        <input type="datetime-local" class="form-control" id="time" name="time" value="<%= workout.time ? workout.time.toISOString().slice(0, 16) : '' %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="location" name="location" value="<%= workout.location %>" required pattern="[A-Za-z\s]+" title="Location must contain only letters and spaces">
                    </div>   
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3"><%= workout.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" class="form-control" id="price" name="price" value="<%= workout.price %>" min="0" required>
                    </div>
                    <div class="mb-3 custom-select-container">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-control" id="category" name="category" required>
                            <option value="Tennis" <%= workout.category === 'Tennis' ? 'selected' : '' %>>Tennis</option>
                            <option value="Wimbledon" <%= workout.category === 'Wimbledon' ? 'selected' : '' %>>Wimbledon</option>
                            <option value="Soccer" <%= workout.category === 'Soccer' ? 'selected' : '' %>>Soccer</option>
                            <option value="Yoga" <%= workout.category === 'Yoga' ? 'selected' : '' %>>Yoga</option>
                            <option value="Pilates" <%= workout.category === 'Pilates' ? 'selected' : '' %>>Pilates</option>
                            <option value="Running" <%= workout.category === 'Running' ? 'selected' : '' %>>Running</option>
                            <option value="Swimming" <%= workout.category === 'Swimming' ? 'selected' : '' %>>Swimming</option>
                            <option value="Cycling" <%= workout.category === 'Cycling' ? 'selected' : '' %>>Cycling</option>
                        </select>
                    </div>
                </div>
                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="supplier" class="form-label">Supplier</label>
                        <input type="text" class="form-control" id="supplier" name="supplier" value="<%= workout.supplier %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="calories" class="form-label">Calories</label>
                        <input type="number" class="form-control" id="calories" name="calories" value="<%= workout.calories %>" min="1" max="3000" required>
                    </div>
                    <div class="mb-3">
                        <label for="coordinates" class="form-label">Coordinates</label>
                        <input type="text" class="form-control" id="coordinates" name="coordinates" value="<%= workout.coordinates %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="duration" class="form-label">Duration in minutes</label>
                        <input type="number" class="form-control" id="duration" name="duration" value="<%= workout.duration %>" min="20" max="180" required>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="text" class="form-control" id="image" name="image" value="<%= workout.image %>" required>
                    </div>
                    <div class="mb-3 custom-select-container">
                        <label for="weather" class="form-label">Weather</label>
                        <select class="form-control" id="weather" name="weather" required>
                            <option value="Indoor" <%= workout.weather === 'Indoor' ? 'selected' : '' %>>Indoor</option>
                            <option value="Outdoor" <%= workout.weather === 'Outdoor' ? 'selected' : '' %>>Outdoor</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- Submit Button -->
            <div class="row">
                <div class="col-md-6">
                    <div class="text-start mt-4">
                        <button type="submit" class="btn btn-primary custom-btn">Update Workout</button>
                    </div>
                </div>
            </div>
        </form>        
    </div>
</div>
<script src="/js/adminWorkouts.js"></script>

<footer class="text-white text-center text-lg-start">
    <div id="first-footer" class="container p-4">
       <div class="row">
          <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
             <h5 class="text-uppercase">Talk To Us</h5>
             <p>
               Have questions or feedback? Reach out to us at support@appapp.com or follow us on social media for the latest updates and tips. We're here to help!
             </p>
          </div>
          <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
             <h5 class="text-uppercase">About Us</h5>
             <p>
               At AppApp, we're all about making fitness easy and enjoyable. Our app lets you book personalized workouts, track your progress, and stay motivated—all in one place. Whether you're a fitness pro or just starting out, AppApp connects you with the right workouts to help you reach your goals. Join us and make your fitness journey simpler and more fun!
             </p>
          </div>
       </div>
    </div>
    <div id="second-footer" class="text-center p-3">
       © 2024 Copyright: Gal, Gili, Yuval, Maayan
    </div>
 </footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
