<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Workouts</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/styles/home.css" />
    <link rel="stylesheet" href="/styles/header-footer.css" />
    <link rel="stylesheet" href="/styles/admin-page.css" />
    <link rel="stylesheet" href="/styles/orderHistory.css">
    <link rel="stylesheet" href="/styles/adminWorkouts.css" />
  </head>
  <body>
    <!-- Navbar -->
    <header class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
      <nav class="container-fluid">
        <!-- Left elements -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Logo -->
          <a class="navbar-brand mt-2 mt-lg-0" href="#">
            <img src="/images/logo.png" height="50" alt="MDB Logo" />
          </a>
          <!-- Left links -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/home/nearme">Near Me</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/adminPage">Admin Page</a>
            </li>
          </ul>
        </div>
        <!-- Right elements -->
        <div class="d-flex align-items-center position-relative">
          <!-- Cart -->
          <a class="link-secondary me-3" href="#">
            <i class="fas fa-shopping-cart fa-2x"></i>
          </a>
          <!-- Avatar -->
          <div class="dropdown">
            <a
              class="dropdown-toggle d-flex align-items-center hidden-arrow link-secondary"
              href="#"
              id="navbarDropdownMenuAvatar"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="fas fa-user-circle fa-2x"></i>
            </a>
            <ul
              class="dropdown-menu"
              aria-labelledby="navbarDropdownMenuAvatar"
              style="position: absolute; top: 100%; left: 0"
            >
              <li>
                <a class="dropdown-item" href="/home/orders/my">My orders</a>
              </li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main content -->
    <div class="container-flex">
      <!-- Sidebar -->
      <aside class="sidebar">
        <ul>
          <li>
            <a href="/adminPage/adminWorkouts"
              ><i class="fas fa-dumbbell"></i> Workouts</a
            >
          </li>
          <li>
            <a href="/adminPage/adminCustomers"
              ><i class="fas fa-running"></i> Customers</a
            >
          </li>
          <li>
            <a href="/adminPage/orders"
              ><i class="fas fa-truck"></i> Orders</a
            >
          </li>
          <li>
            <a href="/adminPage/charts"
              ><i class="fas fa-chart-bar"></i> Statistics</a
            >
          </li>
          <li>
            <a href="/adminPage/facebook"
              ><i class="fab fa-facebook fa-2x iconColor"></i> Facebook</a
            >
          </li>
        </ul>
      </aside>

      <!-- Workouts container -->
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-10">
            <h2 class="head">These are all the orders:</h2>
          </div>
        </div>
        <% orders.forEach(function(order) { 
          let totalPrice = 0;
          %>
        <div class="card <%= order.confirmed ? 'order-arrived' : '' %>">
          <div class="card-body">
            <div class="row text-left">
              <div class="col-md-8">
                <h4 class="card-title">Order ID: <%= order._id %></h4>
                <h4 class="card-title">Created at: <%= new Date(order.createdAt).toLocaleString() %></h4>
                <h4 class="card-title">Confirmed at: <% if (order.confirmed) { %>
                  <%= new Date(order.updatedAt).toLocaleString() %>
                <% } %></h4>
                <ul>
                  <% order.workouts.forEach(function(item) { 
                    const workout = workouts.find(workout => workout._id.toString() === item.id);
                    totalPrice += workout.price
                %>
                  <div class="item">
            
                    <div class="image">
                      <img src="/images/<%= workout.image %>" alt="" />
                    </div>
            
                    <div class="description">
                      <span><%= workout.name %></span>
                      <span><%= workout.description %></span>
                    </div>
            
                    <div class="total-price"><%= workout.price %>₪</div>
                  </div>
            
                  <% }); %>
                <h4 class="card-text">Total price: <%= totalPrice %>₪</h4>
              </div>
              <div class="col-md-4 text-right">
                <form
                  class="update-order-form"
                  data-order-id="<%= order._id %>" 
                  style="display: inline"
                >
                  <button type="submit" <%= order.confirmed ? 'disabled' : '' %> class="btn custom-btn">
                    Confirm order
                  </button>
                </form>
                <form style="display: inline">
                  <button
                    type="button"
                    class="btn btn-danger delete-order-btn custom-btn"
                    data-order-id="<%= order._id %>"
                  >
                    Delete
                  </button>
                </form>

              </div>
            </div>
          </div>
        </div>
        <br />
        <% }); %>
      </div>
    </div>

    <footer class="text-white text-center text-lg-start">
      <div id="first-footer" class="container p-4">
        <div class="row">
          <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
            <h5 class="text-uppercase">Talk To Us</h5>
            <p>
              Have questions or feedback? Reach out to us at support@appapp.com
              or follow us on social media for the latest updates and tips.
              We're here to help!
            </p>
          </div>
          <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
            <h5 class="text-uppercase">About Us</h5>
            <p>
              At AppApp, we're all about making fitness easy and enjoyable. Our
              app lets you book personalized workouts, track your progress, and
              stay motivated—all in one place. Whether you're a fitness pro or
              just starting out, AppApp connects you with the right workouts to
              help you reach your goals. Join us and make your fitness journey
              simpler and more fun!
            </p>
          </div>
        </div>
      </div>
      <div id="second-footer" class="text-center p-3">
        © 2024 Copyright: Gal, Gili, Yuval, Maayan
      </div>
    </footer>

    <script src="/js/adminOrders.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
